{
  "$schema": "../schemas/regulation.schema.json",
  "id": "qiwa",
  "name": {
    "ar": "منصة قوى",
    "en": "Qiwa Platform"
  },
  "authority": {
    "ar": "وزارة الموارد البشرية والتنمية الاجتماعية",
    "en": "Ministry of Human Resources and Social Development (MHRSD)"
