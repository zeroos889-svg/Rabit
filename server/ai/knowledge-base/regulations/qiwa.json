  "website": "https://qiwa.sa",
  "version": "2025",
  "lastAmendment": "2025-03-01",
  "status": "active",

  "overview": {
    "ar": "منصة قوى هي البوابة الإلكترونية الموحدة لخدمات سوق العمل السعودي، توفر خدمات إلكترونية للمنشآت والأفراد",
    "en": "Qiwa is the unified electronic portal for Saudi labor market services, providing e-services for establishments and individuals"
  },

  "contractAuthentication": {
    "overview": {
      "ar": "نظام التوثيق الإلكتروني لعقود العمل يهدف إلى حفظ حقوق جميع أطراف العلاقة التعاقدية",
      "en": "Electronic contract authentication system aims to protect the rights of all parties in the contractual relationship"
    },
    "phases2025": [
      {
        "phase": 1,
        "ar": "إلزامي لجميع العقود الجديدة",
        "en": "Mandatory for all new contracts",
        "startDate": "2024-08-01"
      },
      {
        "phase": 2,
        "ar": "توثيق العقود القائمة للمنشآت الكبيرة (500+ موظف)",
        "en": "Authentication of existing contracts for large establishments (500+ employees)",
        "startDate": "2025-01-01"
      },
      {
        "phase": 3,
        "ar": "توثيق العقود القائمة للمنشآت المتوسطة (50-499 موظف)",
        "en": "Authentication of existing contracts for medium establishments (50-499 employees)",
        "startDate": "2025-04-01"
      },
      {
        "phase": 4,
        "ar": "توثيق العقود القائمة لجميع المنشآت",
        "en": "Authentication of existing contracts for all establishments",
        "startDate": "2025-07-01"
      }
    ],
    "requiredFields": [
      { "ar": "اسم صاحب العمل", "en": "Employer name" },
      { "ar": "اسم الموظف", "en": "Employee name" },
      { "ar": "رقم الهوية", "en": "ID number" },
      { "ar": "المسمى الوظيفي", "en": "Job title" },
      { "ar": "الراتب الأساسي", "en": "Basic salary" },
      { "ar": "بدل السكن", "en": "Housing allowance" },
      { "ar": "بدل النقل", "en": "Transportation allowance" },
      { "ar": "البدلات الأخرى", "en": "Other allowances" },
      { "ar": "تاريخ بداية العقد", "en": "Contract start date" },
      { "ar": "مدة العقد", "en": "Contract duration" },
      { "ar": "ساعات العمل", "en": "Working hours" },
      { "ar": "أيام الإجازة السنوية", "en": "Annual leave days" }
    ],
    "employeeAcceptance": {
      "deadline": 7,
      "unit": "days",
      "ar": "يجب على الموظف قبول أو رفض العقد خلال 7 أيام من تاريخ إرساله",
      "en": "Employee must accept or reject contract within 7 days of sending"
    }
  },

