  "countingRules": {
    "fullSaudi": {
      "count": 1.0,
      "ar": "سعودي بدوام كامل",
      "en": "Full-time Saudi"
    },
    "partTimeSaudi": {
      "count": 0.5,
      "ar": "سعودي بدوام جزئي",
      "en": "Part-time Saudi"
    },
    "studentSaudi": {
      "count": 0.5,
