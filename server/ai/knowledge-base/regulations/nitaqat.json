  "wageThresholds2025": {
    "fullCount": {
      "minWage": 4000,
      "currency": "SAR",
      "ar": "الحد الأدنى للاحتساب الكامل",
      "en": "Minimum for full count"
    },
    "halfCount": {
      "wageRange": { "min": 3000, "max": 3999 },
      "currency": "SAR",
      "ar": "يحتسب بنصف عامل",
      "en": "Counted as half worker"
    },
    "noCount": {
      "maxWage": 2999,
      "currency": "SAR",
      "ar": "لا يحتسب في نطاقات",
      "en": "Not counted in Nitaqat"
    }
  },

  "exemptions": [
    {
      "type": { "ar": "المنشآت الصغيرة جداً", "en": "Very small establishments" },
      "condition": { "ar": "أقل من 5 موظفين في بعض الأنشطة", "en": "Less than 5 employees in some activities" }
    },
    {
      "type": { "ar": "المنشآت الناشئة", "en": "Startups" },
      "condition": { "ar": "السنة الأولى من التأسيس", "en": "First year of establishment" }
    },
    {
      "type": { "ar": "المهن المستثناة", "en": "Exempt professions" },
      "condition": { "ar": "مهن لا يتوفر لها سعوديون مؤهلون", "en": "Professions with no qualified Saudis" }
    }
  ],

  "violations": [
    {
      "type": { "ar": "التوطين الوهمي", "en": "Fake Saudization" },
      "description": {
        "ar": "تسجيل سعوديين لا يعملون فعلياً",
        "en": "Registering Saudis who don't actually work"
      },
      "penalty": {
        "ar": "غرامة تصل إلى 100,000 ريال وإيقاف الخدمات",
        "en": "Fine up to 100,000 SAR and service suspension"
      }
    },
    {
      "type": { "ar": "عدم دفع الرواتب", "en": "Non-payment of salaries" },
      "description": {
        "ar": "تسجيل موظف بدون دفع راتبه",
        "en": "Registering employee without paying salary"
      },
      "penalty": {
        "ar": "إلغاء الاحتساب وغرامة",
        "en": "Count cancellation and fine"
      }
